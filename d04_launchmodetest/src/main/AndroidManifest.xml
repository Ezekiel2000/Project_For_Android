<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.kccc.d04_launchmodetest">

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name=".MainActivity$SingleTaskActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity$SingleTopActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".MainActivity$StandardActivity" />
        <activity
            android:name=".MainActivity$SingleInstanceActivity"
            android:launchMode="singleInstance" />
    </application>

</manifest>