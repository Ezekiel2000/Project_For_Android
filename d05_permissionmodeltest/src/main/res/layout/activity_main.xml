<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kccc.d05_permissionmodeltest.MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="X"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/storage"
        android:textSize="50sp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5078125"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="195dp" />

    <Button
        android:text="권한 요청"
        android:layout_height="wrap_content"
        android:id="@+id/permission"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        tools:text="REQUEST PERMISSION" />

    <TextView
        android:text="저장소 권한"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvStorage"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/storage"
        app:layout_constraintLeft_toLeftOf="@+id/storage"
        tools:text="Storage"
        app:layout_constraintRight_toRightOf="@+id/storage" />

    <TextView
        android:text="X"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/contacts"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="50sp" />

    <TextView
        android:text="주소록 권한"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddress"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/contacts"
        app:layout_constraintRight_toRightOf="@+id/contacts"
        app:layout_constraintLeft_toLeftOf="@+id/contacts"
        tools:text="Address" />
</android.support.constraint.ConstraintLayout>
