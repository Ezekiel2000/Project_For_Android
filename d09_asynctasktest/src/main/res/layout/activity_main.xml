<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kccc.d09_asynctasktest.MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_percent_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8029197"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="0dp"/>


    <Button
        android:id="@+id/no0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="left|center_vertical"
        android:onClick="downloadMP3"
        android:singleLine="true"
        android:tag="0"
        android:text="[1] The Verve - Bitter Sweet Symphony"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_percent_80"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/no1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:onClick="downloadMP3"
        android:singleLine="true"
        android:tag="1"
        android:text="[2] Mika - Grace Kelly"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_percent_80"
        app:layout_constraintTop_toBottomOf="@+id/no0"/>

    <Button
        android:id="@+id/no2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:onClick="downloadMP3"
        android:singleLine="true"
        android:tag="2"
        android:text="[3] 존재하지 않는 URL"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_percent_80"
        app:layout_constraintTop_toBottomOf="@+id/no1"/>

    <Button
        android:id="@+id/progress0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:tag="0"
        android:singleLine="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_percent_80"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/no0"/>

    <Button
        android:id="@+id/progress1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:tag="1"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_percent_80"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/no1"/>

    <Button
        android:id="@+id/progress2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:tag="2"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_percent_80"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/no2"/>
</android.support.constraint.ConstraintLayout>
